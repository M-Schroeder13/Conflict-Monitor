# ======================
# ACLED API Configuration
# ======================
# Get your API key from: https://acleddata.com/
ACLED_API_KEY=your_api_key_here
ACLED_EMAIL=your_email@example.com

# ======================
# Telegram Configuration
# ======================
# Get credentials from: https://my.telegram.org/
TELEGRAM_API_ID=your_api_id
TELEGRAM_API_HASH=your_api_hash
TELEGRAM_PHONE=+1234567890

# ======================
# Reddit Configuration (Optional)
# ======================
# Get credentials from: https://www.reddit.com/prefs/apps
REDDIT_CLIENT_ID=your_client_id
REDDIT_CLIENT_SECRET=your_client_secret
REDDIT_USER_AGENT=conflict-monitor/0.1.0


# ======================
# Database Configuration
# ======================
DATABASE_PATH=data/conflict_monitor.duckdb
DATABASE_BACKUP_PATH=backups/

# ======================
# Dagster Configuration
# ======================
DAGSTER_HOME=.
DAGSTER_POSTGRES_USER=dagster
DAGSTER_POSTGRES_PASSWORD=dagster
DAGSTER_POSTGRES_DB=dagster

# ======================
# Monitoring 
# ======================
SENTRY_DSN=your_sentry_dsn

# ======================
# Application Settings
# ======================
LOG_LEVEL=INFO
DEBUG=False
ENVIRONMENT=development

# ======================
# API Rate Limits
# ======================
MAX_REQUESTS_PER_MINUTE=60
